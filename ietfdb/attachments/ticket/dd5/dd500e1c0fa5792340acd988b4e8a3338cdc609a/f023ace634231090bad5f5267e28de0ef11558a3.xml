    <middle>

<section title="Whitespace Handling (default xml:space)">
  <t>
    START <spanx>nowhitespace</spanx> END.
  </t>
  <t>
    START <spanx>  two leading whitespace characters</spanx> END.
  </t>
  <t>
    START <spanx>two trailing whitespace characters  </spanx> END.
  </t>
  <t>
    START <spanx>two whitespace characters (here: START  END) inside</spanx> END.
  </t>
</section>

<section title="Whitespace Handling (xml:space=preserve)">
  <t>
    START <spanx xml:space="preserve">nowhitespace</spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve">  two leading whitespace characters</spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve">two trailing whitespace characters  </spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve">two whitespace characters (here: START  END) inside</spanx> END.
  </t>
  <t>
    With style="verb":
  </t>
  <t>
    START <spanx xml:space="preserve" style="verb">nowhitespace</spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve" style="verb">  two leading whitespace characters</spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve" style="verb">two trailing whitespace characters  </spanx> END.
  </t>
  <t>
    START <spanx xml:space="preserve" style="verb">two whitespace characters (here: START  END) inside</spanx> END.
  </t>
</section>

